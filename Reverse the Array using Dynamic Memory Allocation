// 2. Write a C program to create a Dynamic array then reverse the array and then finally print the array.

#include<stdio.h>
int main()
{
    int *arr,n,i;
    printf("\nEnter the size of the array : ");
    scanf("%d", &n);
    arr=(int*)malloc(n*sizeof(int));
    printf("\nEnter the elements in the array :\n");
    for(i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }
    printf("\nReverse array is : \n");
    for(i = n-1; i >= 0; i--)
    {
        printf("%d\n", arr[i]);
    }
    return 0;
}
