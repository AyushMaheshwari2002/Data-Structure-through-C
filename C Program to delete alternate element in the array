/* 2. Write a C program to create an array by inserting N elements in it and then delete alternate element from the array.*/

#include <stdio.h>
int main()
{
    int arr[50], N, i;
    printf("Enter the size of the array : ");
    scanf("%d", &N);
    printf("\nEnter the elements in the array :\n");
    for(i = 0; i < N; i++)
    {
        scanf("%d", &arr[i]);
    }
    printf("\nAfter deleting alternate elements, the array is : \n");
    for( i = 0; i < N; i+=2)
    {
        printf("%d\n", arr[i]);
    }
    return 0;
}
